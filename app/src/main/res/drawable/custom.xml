<!-- custom_bordered_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 테두리를 그리는 shape 리소스 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke
                android:width="2dp"
                android:color="@android:color/black" /> <!-- 테두리 색상을 검정색으로 설정합니다. -->
            <corners android:radius="8dp" /> <!-- 박스의 모서리를 둥글게 설정합니다. -->
        </shape>
    </item>

    <!-- 텍스트와 함께 보여줄 배경 shape 리소스 -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
        <solid android:color="#87CEFA" /> <!-- 배경 색상을 하늘색 파스텔톤으로 설정합니다. -->
        <corners android:radius="6dp" /> <!-- 배경의 모서리를 둥글게 설정합니다. -->
        </shape>
    </item>
</layer-list>
